<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Main content layout -->
    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/repl_input"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:textColor="#263238"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:textIsSelectable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="end">

            <Button
                android:id="@+id/show_logcat_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Logcat"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                android:paddingHorizontal="24dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/launch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Launch"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1976D2"
                android:paddingHorizontal="24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp" />

    </LinearLayout>

    <!-- Full screen logcat overlay -->
    <FrameLayout
        android:id="@+id/logcat_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:scrollbars="horizontal"
            android:fadeScrollbars="false">

            <TextView
                android:id="@+id/fullscreen_logcat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:padding="16dp"
                android:textIsSelectable="true"
                android:background="#000000"
                android:textColor="#00FF00"
                android:fontFamily="monospace"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:singleLine="false"
                android:maxLines="10000"
                android:scrollHorizontally="true" />

        </HorizontalScrollView>

        <Button
            android:id="@+id/hide_logcat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:text="Hide Logcat"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF5722"
            android:paddingHorizontal="24dp" />

    </FrameLayout>

</FrameLayout>
