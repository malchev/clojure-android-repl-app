<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">



    <ScrollView
        android:id="@+id/chat_history_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:background="#f5f5f5"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/chat_history_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <!-- Chat input area at the bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:background="#f8f8f8"
        android:padding="8dp">

        <EditText
            android:id="@+id/feedback_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type your message here..."
            android:minLines="1"
            android:maxLines="4"
            android:inputType="textMultiLine|textCapSentences"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/paperclip_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="ðŸ“Ž"
            android:textSize="16sp"
            android:textColor="#666666"
            android:background="@android:color/transparent"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/submit_feedback_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"
            android:minWidth="60dp"
            android:padding="12dp" />

    </LinearLayout>



    <!-- Feedback buttons container -->
    <LinearLayout
        android:id="@+id/feedback_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:layout_marginTop="16dp"
        android:padding="16dp">

        <Button
            android:id="@+id/run_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/run_code"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3" />

        <Button
            android:id="@+id/thumbs_up_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/accept_app"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#00FF00" />

        <Button
            android:id="@+id/cancel_iteration_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Cancel"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF5722"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Legacy buttons to be removed later -->
    <Button
        android:id="@+id/confirm_success_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accept App"
        android:visibility="gone" />

    <!-- Keep the existing ImageView hidden for backward compatibility -->
    <ImageView
        android:id="@+id/screenshot_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LLM Type:"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/llm_type_spinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/llm_spinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
